---
import { Image } from "astro:assets";
import logo from "../assets/images/logo.png";
import { Button } from "./ui/button";
import Toggle from "./Toggle.astro";
---

<div class="h-auto fixed top-0 left-0 w-screen px-4 md:px-8 z-50 bg-white">
  <div
    class="h-full w-full flex justify-between items-center gap-1.5 py-0.5 px-0.5 md:py-2 md:px-8"
  >
    <div class="h-[90px] w-[90px] md:h-[100px] md:w-[100px]">
      <img
        src={logo.src}
        alt="company logo"
        class="w-full h-full object-contain"
      />
    </div>
    <div class="hidden md:block font-neue font-normal text-black">
      TRUST CONSULTING Â© 2025
    </div>
    <div class="flex justify-start items-center py-0.5 gap-6 md:w-48 w-40">
      <Button
        variant="outline"
        className="rounded-full md:h-10 md:px-6 cursor-pointer text-[16px] bg-transparent border-black text-black"
        >Let's talk</Button
      >
    </div>
  </div>
</div>
