---
import Seperator from "../Seperator.astro";
import clsx from "clsx";

const { service } = Astro.props;
---

<a href="" class="pt-[50px] w-full service">
  <div class="flex flex-col gap-5 items-start w-full pb-[20px] md:pb-[50px]">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-3 md:gap-32 pb-[40px] md:pb-[100px] w-full">
      <div class="title flex items-start justify-start gap-0.5">
        <span class="font-normal text-[30px]">{service?.number}.</span>
        <div
          class="font-normal text-[30px] break-keep whitespace-nowrap text-left pr-2"
        >
          {service?.title}
        </div>
      </div>
      <div class="description text-left">{service?.description}</div>
    </div>
    {service?.number !== "06" ? <Seperator /> : <div />}
  </div>
</a>
