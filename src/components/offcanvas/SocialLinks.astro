<div class="link-container flex flex-col gap-0.5 items-start">
    <div class="text-white"><a href="">LinkedIn</a></div>
    <div class="text-white"><a href="">Facebook</a></div>
    <div class="text-white"><a href="">Twitter</a></div>
    <div class="text-white"><a href="">Instagram</a></div>
    <div class="text-white"><a href="">Medium</a></div>
</div>
<script>
    import { gsap } from "@/utils/gsap";
    gsap.utils.toArray<HTMLElement>('.link-container a').forEach(link => {
        //create tween
        let tween = gsap.to(link, {
            opacity: 0.3,
            duration: 0.2,
            paused: true,
            ease: 'power1.in'
        })

        link.addEventListener('mouseenter', () => tween.play())
        link.addEventListener('mouseleave', () => tween.reverse())

    })
</script>